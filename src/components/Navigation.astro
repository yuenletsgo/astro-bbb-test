---
import '../styles/global.css';

const {testWord} = Astro.props;
---
<div x-data="{ open: false }">
  <div :class=" open ? 'w-96' : 'w-32' " class="nav-links flex items-center gap-8 bg-neutral-900 dark:bg-neutral-100 px-8 py-2 rounded-full fixed top-10 scale-150 origin-top-left transition-all duration-500">
    <a class='text-white dark:text-black' href="/">R</a>
    <div class="flex justify-center items-center gap-8 transform-all">
      <div @click="open =! open" class='flex flex-col w-4 justify-end group transition-all cursor-pointer'>
        <span class='block bg-neutral-100 dark:bg-neutral-900 h-0.5 transition-all w-4 group-hover:w-2'></span>
        <span class='block bg-neutral-100 dark:bg-neutral-900 h-0.5 transition-all my-1 w-2 group-hover:w-4'></span>
        <span class='block bg-neutral-100 dark:bg-neutral-900 h-0.5 transition-all w-4 group-hover:w-2'></span>
      </div>
      <div
        x-show="open"
        @click.outside="open = false"
        class='flex gap-8 transition-all origin-left select-none'>
        <a
          x-show="open"
          x-transition:enter="transition-all duration-300 delay-0"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition-all duration-300 delay-100"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class='text-white dark:text-black' href="/about/" data-astro-reload>About</a>
        <a
          x-show="open"
          x-transition:enter="transition-all duration-300 delay-100"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition-all duration-300 delay-50"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class='text-white dark:text-black' href="/blog/">Work</a>
        <a
          x-show="open"
          x-transition:enter="transition-all duration-300 delay-300"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition-all duration-300 delay-0"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
          class='text-white dark:text-black' href="/tags/">Contact</a>
      </div>
    </div>
  </div>
</div>
