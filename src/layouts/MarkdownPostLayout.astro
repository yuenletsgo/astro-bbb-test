---
import BlogListPageLayout from './BlogListPageLayout.astro';

const { frontmatter } = Astro.props;
---
<BlogListPageLayout pageTittle={frontmatter.title}>
  <div ></div>
  <h1>{frontmatter.title}</h1>
  <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
  <p>Written by: <a href="/about/">{frontmatter.author}</a></p>
  <div class="tags flex">
    {frontmatter.tags.map((tag) => (
      <p class="mr-4"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
  <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
  <slot />
</BlogListPageLayout>